{
  "name": "secretnote",
  "private": true,
  "files": [
    "static"
  ],
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "format:black": "python -m black --check src tests",
    "lint:ruff": "python -m ruff check src tests",
    "test:pytest": "python -m pytest",
    "typecheck:pyright": "pyright --project ../.. src tests",
    "dev": "NODE_ENV=development python -m secretnote.server --config=./.jupyter/config_dev.py --debug --no-browser --mode=scql --host=http://127.0.0.1:8992 --party=bob",
    "build:py": "rye build --out ./dist",
    "publish:py": "python -m hatch publish ./dist",
    "build": "nx build:py"
  },
  "devDependencies": {
    "@difizen/libro-analyzer": "^0.1.0",
    "@secretflow/secretnote": "workspace:^",
    "@secretflow/secretnote-ui": "workspace:^"
  }
}
