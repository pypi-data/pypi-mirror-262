<tryton>
    <data>
        <record model="res.group" id="group_roundup_synchronization">
            <field name="name">Roundup Synchronization</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_roundup_synchronization">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_roundup_synchronization"/>
        </record>

        <record model="ir.ui.view" id="roundup_configuration_view_form">
            <field name="model">project.roundup.configuration</field>
            <field name="type">form</field>
            <field name="name">configuration_form</field>
        </record>
        <record model="ir.action.act_window" id="act_roundup_configuration_form">
            <field name="name">Roundup Configuration</field>
            <field name="res_model">project.roundup.configuration</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_roundup_configuration_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="roundup_configuration_view_form"/>
            <field name="act_window" ref="act_roundup_configuration_form"/>
        </record>
        <menuitem parent="project.menu_configuration"
            action="act_roundup_configuration_form"
            id="menu_roundup_configuration" icon="tryton-list"/>
    </data>
</tryton>
