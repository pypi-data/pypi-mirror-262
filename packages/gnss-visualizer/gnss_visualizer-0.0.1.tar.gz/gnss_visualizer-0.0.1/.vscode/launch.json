    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with file",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/bokeh",
            "args": ["serve", "--show", "${workspaceFolder}/src/gnss_visualizer/__main__.py", "--args", "${workspaceFolder}/coldstart.ubx", "-vv", "-w", "1"],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug with serial",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/bokeh",
            "args": ["serve", "--show", "${workspaceFolder}/src/gnss_visualizer/__main__.py", "--args", "/dev/ttyUSB0", "-vv"],
            "console": "integratedTerminal"
        }
    ]
}
